@model IEnumerable<AIS.Entities.Teachers>

@{
    ViewBag.Title = "Index";
}

<h2>Управление данными преподавателей</h2>
<br />
<p>
    @Html.ActionLink("Добавить нового преподавателя", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Email
        </th>
        <th>
            Логин
        </th>
        <th>
            Специальность
        </th>
        <th>
            Статус
        </th>
        <th></th>
        <th></th>
    </tr>
@foreach (var item in Model) 
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Speciality.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusTeacher.Title)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.IdTeachers }, new { @class = "btn btn-outline-primary btn-sm" })
        </td>
        <td>
            @Html.ActionLink("Удалить", "Delete", new { id = item.IdTeachers }, new { @class = "btn btn-outline-danger btn-sm" })
        </td>
    </tr>
}

</table>
