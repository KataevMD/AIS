@model AIS.Entities.Discipline

@{
    ViewBag.Title = "Create";
}

<h2>Добавление информации о новой дисциплине</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Title, "Наименование дисциплины", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group row" style="padding-bottom: 20px">
        <div class="col-md-offset-2 col-md-4">
            @Html.ActionLink("Назад", "Index", new { }, new { @class = "btn btn-outline-secondary" })
        </div>
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </div>
</div>
}

