@model AIS.Entities.ProcedureForTransferringPoints

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование информации о процедуре перевода баллов в оценку</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Процедура перевода баллов в оценку, на оценку: '@Model.FinalGrade'</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FinalGrade)

        <div class="form-group row" style="padding-bottom: 20px">
            @Html.LabelFor(model => model.MinPercents, "От (%)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MinPercents, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MinPercents, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row" style="padding-bottom: 20px">
            @Html.LabelFor(model => model.MaxPersents, "До (%)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxPersents, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaxPersents, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group row" style="padding-bottom: 20px">
            <div class="col-md-offset-2 col-md-4">
                @Html.ActionLink("Назад", "Index", new { }, new { @class = "btn btn-outline-secondary" })
            </div>
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>

        </div>
    </div>
}
