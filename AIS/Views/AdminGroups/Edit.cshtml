@model AIS.Entities.Group

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование учебной группы</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Учебная группа: @Model.Title</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdGroup)

    <div class="form-group row" style="padding-bottom: 20px">
        @Html.LabelFor(model => model.Title, "Название учебной групы", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row" style="padding-bottom: 20px">
        @Html.LabelFor(model => model.CourseNumber, "Номер курса", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CourseNumber, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "1", @max = "4" } })
            @Html.ValidationMessageFor(model => model.CourseNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row" style="padding-bottom: 20px">
        @Html.LabelFor(model => model.IdSpeciality, "Специальность группы", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdSpeciality", null, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.IdSpeciality, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row" style="padding-bottom: 20px">
        <div class="col-md-offset-2 col-md-3">
            @Html.ActionLink("Назад", "Index", new { }, new { @class = "btn btn-outline-secondary" })
        </div>
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>

    </div>
</div>
}

