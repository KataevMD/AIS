@model AIS.Entities.Student

@{
    ViewBag.Title = "Create";
}

<h2>Добавление информации о новом студенте</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group row" style="padding-bottom: 20px">
            @Html.LabelFor(model => model.LastName, "Фамилия", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row" style="padding-bottom: 20px">
            @Html.LabelFor(model => model.FirstName, "Имя", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName,  new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row" style="padding-bottom: 20px">
            @Html.LabelFor(model => model.Patronymic, "Отчество (при наличии)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Patronymic, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row" style="padding-bottom: 20px">
            @Html.LabelFor(model => model.Email, "Электронная почта (необзатательное)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row" style="padding-bottom: 20px">
            @Html.LabelFor(model => model.Telephone, "Номер телефона (необзатательное)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row" style="padding-bottom: 20px">
            @Html.LabelFor(model => model.IdGroup, "Группа", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdGroup", null, htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.IdGroup, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row" style="padding-bottom: 20px">
            <div class="col-md-offset-2 col-md-4">
                @Html.ActionLink("Назад", "Index", new { }, new { @class = "btn btn-outline-secondary" })
            </div>
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </div>
    </div>
}

